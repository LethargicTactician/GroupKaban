<Window
    x:Class="Othello.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Othello"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="650"
    Height="400"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="resources/othello.png" Opacity="0.5" />
    </Window.Background>
    <Grid>
        <Label
            Name="menuTitle"
            Margin="69,24,212,305"
            Content="OTHELLO!!!"
            FontSize="25" />
        <ComboBox
            Name="gameType"
            Width="249"
            Height="27"
            Margin="201,205,200,152" />
        <Button
            Name="btnStartGame"
            Width="91"
            Height="24"
            Margin="280,287,280,73"
            Click="btnUpdateSource_Click"
            Content="Play" />
    </Grid>
</Window>

