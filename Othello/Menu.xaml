<Window
    x:Class="Othello.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Othello"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="650"
    Height="400"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="resources/othello.png" Opacity="0.5" />
    </Window.Background>
    <Grid Margin="10,0,10,-6">
        <GroupBox
            Name="menuTitle"
            Width="309"
            Margin="160,23,160,0"
            VerticalAlignment="Top"
            Background="Black"
            Content="OTHELLO!!!"
            FontSize="25"
            Foreground="White"
            Opacity="0.65" />

        <ComboBox
            Name="gameType"
            Height="27"
            Margin="201,208,192,155" />

    </Grid>
</Window>

